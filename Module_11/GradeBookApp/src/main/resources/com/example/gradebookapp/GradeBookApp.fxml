<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.TextArea?>
<GridPane alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.gradebookapp.GradeBookAppController">

    <Label text="First Name" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="txtFirstName" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="Last Name" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="txtLastName" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Course" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="txtCourse" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Grade" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <ComboBox fx:id="boxGrade" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <HBox GridPane.columnIndex="0" GridPane.rowIndex="4">
        <Button fx:id="btnClear" text="Clear" onAction="#onBtnClearClick"/>
        <Button fx:id="btnView" text="View" onAction="#onBtnViewClick"/>
        <Button fx:id="btnSave" text="Save" onAction="#onBtnSaveClick"/>
    </HBox>

    <Label text="Saved Grades" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <TextArea fx:id="viewGrade" GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.columnSpan="2"/>
</GridPane>